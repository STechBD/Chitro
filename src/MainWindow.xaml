<Window x:Class="Chitro.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid>
			<!-- Image Viewer -->
			<Image x:Name="imgPhoto" Stretch="Uniform" />
		</Grid>
		
		<!-- Navigation Control -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 10">
			<Button Content="Previous" Width="100" Height="30" Margin="10" Click="PreviousButton" />
			<Button Content="Next" Width="100" Height="30" Margin="10" Click="NextButton" />
		</StackPanel>
	</Grid>
</Window>
